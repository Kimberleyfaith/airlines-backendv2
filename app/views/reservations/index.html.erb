<p id="notice"><%= notice %></p>

<h1 class="header">Reservations</h1>

<table>
  <thead class="col_names">
    <tr>
      <th>Seat</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Flight</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="col_data">
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.seat %></td>
        <td><%= reservation.created_at %></td>
        <td><%= reservation.updated_at %></td>
        <td><%= reservation.flight_id %></td>
        <td><%= reservation.user_id %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path %>
